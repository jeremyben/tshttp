{
	"version": "independent",
	"npmClient": "yarn",
	"useWorkspaces": true,
	"command": {
		"version": {
			"allowBranch": "master",
			"conventionalCommits": true,
			"push": false,
			"message": "chore: release"
		},
		"publish": {
			"fromPackage": true
		}
	},
	"ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.test.ts", "**/test.ts", "**/*.md"]
}
